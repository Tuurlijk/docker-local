{
  "name": "michielroos/typo3-7",
  "type": "project",
  "description": "TYPO3 7 site",
  "authors": [
    {
      "name": "Michiel Roos",
      "email": "michiel@michielroos.com"
    }
  ],
  "require": {
    "helhum/typo3-console": "^4.2",
    "symfony/dotenv": "^4.1",
    "typo3/cms": "^7.6"
  },
  "config": {
    "bin-dir": "bin",
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "extra": {
    "typo3/cms": {
      "web-dir": "Web",
      "cms-package-dir": "{$vendor-dir}/typo3/cms"
    },
    "helhum/typo3-console": {
      "install-extension-dummy": "0"
    }
  },
  "autoload": {
    "psr-4": {
    }
  },
  "repositories": {
    "local": {
      "type": "path",
      "url": "LocalPackages/*"
    },
    "typo3": {
      "type": "composer",
      "url": "https://composer.typo3.org"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "chown -R 1000:1000 ."
    ],
    "ci:php:lint": "find ./ -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l",
    "clear-typo3-cache": "./bin/typo3cms cache:flush --files-only",
    "cc": "@clear-typo3-cache",
    "ci": [
      "@ci:php:lint",
      "@ci:dynamic"
    ],
    "dump-database": "./.docker/bin/dump.sh",
    "dd": "@dump-database"
  }
}